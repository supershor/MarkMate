<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_26sdp"
                android:textColor="@color/black"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_password_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change password"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/buttons_design"
                android:textColor="@color/light"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/report_error_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report error"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/buttons_design"
                android:textColor="@color/light"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact_owner_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact owner"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/buttons_design"
                android:textColor="@color/light"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logout_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/buttons_design"
                android:textColor="@color/light"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>