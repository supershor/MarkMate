<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="LOGIN"
          android:textAlignment="center"
          android:textSize="@dimen/_28sdp"
          android:textStyle="bold"
          android:layout_marginTop="@dimen/_40sdp"
          android:layout_marginBottom="@dimen/_10sdp"
          android:textColor="@color/black"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="WELCOME BACK"
          android:textAlignment="center"
          android:textSize="@dimen/_28sdp"
          android:textStyle="bold"
          android:layout_marginBottom="@dimen/_25sdp"
          android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login in your account"
            android:textSize="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:textColor="@color/black"/>
        <EditText
            android:maxLength="10"
            android:id="@+id/number_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="@drawable/input_taker"
            android:hint="  Enter number"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_18sdp" />
        <EditText
            android:maxLength="10"
            android:id="@+id/password_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:background="@drawable/input_taker"
            android:hint="  Enter password"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_18sdp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgot_password_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="@string/forgot_password"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_at_login_page"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:background="@drawable/buttons_design"
            android:text="Login"
            android:textColor="@color/white" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/already_have_an_account_login_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:text="@string/does_not_have_an_account"
            android:textSize="@dimen/_16sdp"
            android:textAlignment="center"
            android:textColor="@color/black" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  </RelativeLayout>