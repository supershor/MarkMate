<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MarkMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MarkMate" parent="Base.Theme.MarkMate" />
    <style name="Alert.Dialog.BAckground" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialog_light</item>
    </style>
    <style name="black_date_picker_theme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorAccent">#8CD4BE</item>
        <item name="background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="black" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorAccent">#FFFFFF</item>
        <item name="background">@color/white</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:numbersInnerTextColor">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:actionMenuTextColor">@color/light</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/negative_button_color</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/positive_button_color</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="MyDialogThemeforLogout" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/NegativeButtonStyle</item>
    </style>
    <style name="MyDialogTheme_MainActivity" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialog_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
</resources>